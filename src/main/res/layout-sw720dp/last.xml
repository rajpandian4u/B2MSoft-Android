<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f6f2" >

    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#30aee9" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="3dp"
                android:text="Date"
                android:textColor="#FFFFFF"
                android:textSize="34sp" />

            <DigitalClock
                android:id="@+id/digital_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="MEDS"
            android:textColor="#FFFFFF"
            android:textSize="38sp" />

        <ImageView
            android:id="@+id/profileimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profileimage"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@+id/profileimage"
            android:text="Welcome!"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/profilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profileimage"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/profileimage"
            android:text="Ms.Lara Croft"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay1" >

        <RelativeLayout
            android:id="@+id/linlay1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="85dp"
            android:layout_marginRight="85dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/blackborder3" >

            <ImageView
                android:id="@+id/textView1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:background="@drawable/success"
                android:text="" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:text="Success!"
                android:textSize="52dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerInParent="true"
                android:text="Your information was successfully Stored."
                android:textSize="32dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relay3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/linlay1"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="115dp"
            android:layout_marginRight="115dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button3" >
            
            <LinearLayout
                   android:id="@+id/linearlay1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:gravity="center"
                   
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:weightSum="3" >

                    <TextView
                        android:id="@+id/logo1"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:background="@drawable/meds"
                         android:layout_marginTop="1dp"
                          android:layout_marginLeft="10dp"
                        android:gravity="center"
                         />
                   
                      <TextView
                        android:id="@+id/next"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_weight="0.50"
                        android:background="@drawable/next"
                         android:layout_marginTop="1dp"
                         android:layout_marginLeft="20dp"
                        android:gravity="center"
                         />
                      
                        <TextView
                        android:id="@+id/drive"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"
                        android:background="@drawable/drive"
                         android:layout_marginTop="1dp"
                         android:layout_marginLeft="20dp"
                        android:gravity="center"
                         />
                </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/relay3"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="125dp"
            android:layout_marginRight="125dp"
            android:background="@drawable/blackborder3" >
            
            <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Data will be synced to Google Drive."
            android:textSize="25dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottomlay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2" >

                <Button
                    android:id="@+id/signout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#576380"
                    android:text="Sign out"
                    android:textColor="#FFFFFF"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/nexttask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#30aee9"
                    android:text="Next Task"
                    android:textColor="#FFFFFF"
                    android:textSize="50sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>